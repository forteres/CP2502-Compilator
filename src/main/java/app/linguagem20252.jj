        errosSintaticos.append("Erro sintático: Comando de atribuição deve seguir a sintaxe: 'set identificador[indice]/identificador = (valor ou expressão);'").append("\n\n");

        skipToSynchronizingToken(SET, READ, SHOW, IF, LOOP);

    }
}

