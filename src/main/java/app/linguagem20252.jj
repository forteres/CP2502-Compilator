void Atribuicao() :
{Token t;}
{
    try{
        <SET> t=<IDENTIFIER> { executarAcaoSemantica(() -> analisadorSemantico.A1(t.image)); } Indice() { executarAcaoSemantica(() -> analisadorSemantico.A2()); } <ASSIGN> { analisadorSemantico.iniciarExpressao(); } Expressao() { executarAcaoSemantica(() -> analisadorSemantico.A3()); } <SEMICOLON>
    }catch(ParseException e){
        if(isEOF()){throw e;}

        errosSintaticosCount++;
        String tokensEsperados = getListaTokensEsperados(e.expectedTokenSequences);

