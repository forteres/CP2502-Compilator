import java.io.InputStream;
import java.io.FileInputStream;
import java.io.FileNotFoundException;

public class Linguagem20252 {

    public static void main(String args[]) throws ParseException, FileNotFoundException {
        InputStream input = System.in;
        if (args.length > 0) {
          input = new FileInputStream(args);
        }

        // Cria uma instância do analisador léxico gerado
        Linguagem20252 lexer = new Linguagem20252(input);

        Token t;
        System.out.println("Iniciando a análise léxica...");
        System.out.println("------------------------------");
        do {
          t = lexer.getNextToken(); // Pega o próximo token
          System.out.println("Token: " + t.kind + " (" + t.image + ")");
        } while (t.kind != Linguagem20252Constants.EOF); // Continua até o fim do arquivo

        System.out.println("------------------------------");
        System.out.println("Análise léxica concluída.");
      }

}


PARSER_END(Linguagem20252)



